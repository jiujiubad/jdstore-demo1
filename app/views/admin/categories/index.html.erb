<h2> 分类列表 </h2>

<div class="pull-right">
  <%= link_to '新的分类', new_admin_category_path, class: 'btn btn-primary'%>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>分类名称</th>
      <th>海报</th>
      <th>海报文字</th>
      <th colspan="2">设置</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= link_to(category.name, admin_category_path(category)) %></td>
      <td>
        <%= link_to admin_category_path(category) do %>
          <% if category.category_image.present? %>
            <%= image_tag(category.category_image.thumb.url, class:"thumbnail") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x100&text=No Pic", class:"thumbnail") %>
          <% end %>
        <% end %>
      </td>
      <td><%= category.category_title %></td>
      <td>
        <%= link_to '编辑',edit_admin_category_path(category), class:"btn btn-info btn-xs" %>
        <%= link_to '删除',admin_category_path(category),method: :delete, data: {confirm: '确定删除？'}, class:"btn btn-danger btn-xs"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
