<h2>我的订单</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>订单编号</th>
      <th>创建时间</th>
      <th>订购人</th>
      <th>订单状态</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to(order.id, admin_order_path(order)) %></td>
        <td><%= order.created_at %></td>
        <td><%= order.user.email %></td>
        <td><%= order.aasm_state %></td>
      </tr>
    <% end %>
  </tbody>
</table>
