<div class="col-md-6">
  <% if @photos.present? %>
    <% @photos.each_with_index do |p, index| %>
      <% if index == 0 %>
        <div class="col-md-12">
          <%= image_tag p.avatar.medium.url %>
        </div>
      <% else %>
        <div class="col-md-3 col-sm-6 col-xs-6">
          <%= image_tag p.avatar.thumb.url %>
        </div>
      <% end %>
    <% end %>
    </div>
  <% else %>
    <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
  <% end %>
</div>
<div class="col-md-6">
  <h1><%= @product.title %></h1>
  <h4><%= @product.description %></h4>
  <h2>¥ <%= @product.price %> 元</h2>
  <% if @product.quantity > 0 %>
    <p>库存 <%= @product.quantity %></p>
  <% else %>
    <p>商品已售罄</p>
  <% end %>
  <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class:"btn btn-danger btn-lg") %>
</div>
